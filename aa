<style>.slider-container {
    position: relative;
    width: 100%; /* Adjust as needed */
    height: 100%;
    overflow: hidden;
}

.left-img {
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 2s ease-in-out; /* Slower animation */
}

.slide-enter {
    transform: translateX(100%);
}

.slide-active {
    transform: translateX(0%);
}

.slide-exit {
    transform: translateX(-100%);
}
</style>
                <div class="slider-container">
    <a href="" data-fancybox>
        <div class="left-img" id="slider" style="background-image:url('./images/5.jpg')"></div>
    </a>
</div>

<script>
    const images = [
        './images/5.jpg',
        './images/6.jpg',
        './images/7.jpg'
    ];

    let currentIndex = 0;
    const slider = document.getElementById('slider');

    function changeImage() {
        // Apply exit animation
        slider.classList.remove('slide-active');
        slider.classList.add('slide-exit');

        setTimeout(() => {
            currentIndex = (currentIndex + 1) % images.length;
            slider.style.backgroundImage = `url('${images[currentIndex]}')`;

            // Reset animation classes for new image
            slider.classList.remove('slide-exit');
            slider.classList.add('slide-enter');

            setTimeout(() => {
                slider.classList.remove('slide-enter');
                slider.classList.add('slide-active');
            }, 50);
        }, 2000); // Slow transition time (matches CSS)
    }

    setInterval(changeImage, 5000); // Slower transition every 5 seconds
</script>

